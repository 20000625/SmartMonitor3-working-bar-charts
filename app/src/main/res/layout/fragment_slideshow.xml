<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartCarbonMonoxide"
        android:layout_width="410dp"
        android:layout_height="275dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_slideshow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:text="Extractor Fan Control"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_turn_on_extractor_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Extractor Fan"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_slideshow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_turn_off_extractor_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off Extractor Fan"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/button_turn_on_extractor_fan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonFanAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Fan Auto"
        app:layout_constraintTop_toBottomOf="@+id/button_turn_off_extractor_fan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
